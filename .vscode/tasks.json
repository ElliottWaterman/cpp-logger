{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "clang++ build test-stdthreadostream",
      "command": "/usr/bin/clang++",
      "args": [
        "-ggdb",
        "test/test-stdostream.cpp",
        "-Wall",
        "-Wpedantic",
        "-Wextra",
        "-std=c++20",
        "-I",
        "src/",
        "-D_GLIBCXX_DEBUG",
        "-lpthread",
        "-o",
        "${workspaceFolder}/test-stdthreadostream"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}